{
    "manifest_version": 3,
    "name": "CrOS Files Tab",
    "description": "ChromeOSのファイルアプリをタブで開く",
    "version": "1.0",
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_icon": {
            "32": "icons/icon32.png"
        }
    },
    "icons": {
        "16":  "icons/icon16.png",
        "32":  "icons/icon32.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": []
}
